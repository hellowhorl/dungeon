{
  "image": "ghcr.io/hellowhorl/venture:api-container",
  "runArgs": ["--privileged"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.pylint",
        "charliermarsh.ruff",
        "bierner.markdown-checkbox"
      ],
      "settings": {
        "files.exclude": {
          "**/.**": true,
          "**/__**": true
        }
      }
    }
  },
  "postCreateCommand": "sudo mount -a"
}
